<% layout("/layouts/boilerplate") %>

<div class="row">
    <h2 class="col-6 offset-3 mb-3 mt-3">Login</h2>
    <div class="col-6 offset-3">
        <form action="/login" method="post" novalidate class="needs-validation">
            <div class="mb-3">
                <label for="username" class="form-lable">Username</label>
                <input type="text" name="username" p class="form-control" required>
                <div class="valid-feedback">Looks Good! </div>
            </div>
           
            <div class="mb-3">
                <label for="password" class="form-lable">Password</label>
                <input type="password" name="password" class="form-control" required>
                <div class="valid-feedback">Good Choice </div>
            </div>
            <button class="btn btn-success mt-3">Login</button>
        </form>
    </div>
</div>    